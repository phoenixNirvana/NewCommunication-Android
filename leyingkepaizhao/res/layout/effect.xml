<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/save_success_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_10px"
            android:drawableLeft="@drawable/save_success"
            android:gravity="center_vertical"
            android:text="已保存到相册"
            android:textColor="@color/white" />

        <com.leyingke.paizhao.widget.PhotoFrame
            android:id="@+id/view_photoframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/space_15px" />

        <LinearLayout
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/share_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >
            <TextView
                android:id="@+id/tv_share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/weibo"
                android:gravity="center"
                android:text="新郎微博"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_share_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/weixin_friend"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_share_all_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/weixin_all_friends"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/b"
            android:layout_marginLeft="10dp"
            android:text="分享到"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/take_bg"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_continue_take_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_continue_sel"
            android:text="继续拍照"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>